<br>
<h1>Authors</h1>
<br><br>
<table class="table table-bordered">
<thead>
<th>Name</th>


</thead>
<% @authors.each do |author|%>
<tr>
<td><%= author.name %></td>
<td><%= author.books.pluck(:bookname) %></td>
<td><%= author.images.pluck(:imagename) %></td>
<td>
<%=link_to "Add Book/Image", author_path(author)%>
</td>      
<td>
<%=link_to "Edit", edit_author_path(author)%>
</td>
<td>
<%=link_to "Delete", author, method: :delete, data:{confirm:"Are you sure ?"}%>
</td>
</tr>
<% end%>
</table>
<div><h1><%= link_to "Create", new_author_path, class:"btn btn-outline-primary"%></h1></div>
